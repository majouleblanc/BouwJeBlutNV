@{
    ViewData["Title"] = "Home Page";
}
<style>
    .custom-bg {
        background: linear-gradient( rgba(0,0,0,0.5), rgba(0, 0, 0, 0.5) ), url('https://source.unsplash.com/x-ghf9LjrVg/1920x1080') no-repeat center center fixed;
        background-size: cover;
        opacity: 1;
        z-index:-1;
    }
</style>
<div class="custom-bg m-0 p-0">

    <div class="bg-light container">

        <div id="demo" class="carousel slide m-2" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/foto820.jpg" alt="foto820" width="1100" height="500">
                </div>
                <div class="carousel-item">
                    <img src="~/images/foto875.jpg" alt="foto875" width="1100" height="500">
                </div>
                <div class="carousel-item">
                    <img src="~/images/foto895.jpg" alt="foto895" width="1100" height="500">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>

        <div>
            <div class="card-deck">
                <div class="card">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="https://source.unsplash.com/r3WAWU5Fi5Q/362x200" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://source.unsplash.com/362x200/?house" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://source.unsplash.com/sZ9F_XkGJfI/362x200" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    @*<img class="card-img-top" src="https://source.unsplash.com/2d4lAQAlbDA/362x200" alt="Card image cap">*@
                    <div class="card-body">
                        <h5 class="card-title">14 woningen:</h5>
                        <p class="card-text">
                            <h6>Plan Horsterdebolder te Zeemiksem</h6>
                            In plan Horsterdebolder te Zeemiksem gaan wij 14 woningen bouwen.
                            U kunt kiezen uit 6 verschillende types. Volop eigen inbreng mogelijk met betrekking tot de bouw van de woning.
                            Prijs: vanaf €. 253.000, -
                        </p>
                        <p class="card-text"><small class="text-muted">Last updated 3 hours ago</small></p>
                    </div>
                </div>
                <div class="card">
                    <img class="card-img-top" src="https://source.unsplash.com/2d4lAQAlbDA/362x200" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">1 woning:</h5>
                        <p class="card-text">
                            <h6>Zesstedenweg 272 te Grootedonk</h6>
                            Aan de gezelligste woonstraat van Grootedonk op korte afstand van scholen, winkelcentrum en station komt een NIEUW TE BOUWEN VRIJSTAAND WOONHUIS MET GARAGE op ca.
                            310 m² eigen grond.
                            prijs: €. 330.000, -
                        </p>
                        <p class="card-text"><small class="text-muted">Last updated 1 hour ago</small></p>
                    </div>
                </div>
                <div class="card">
                    <img class="card-img-top" src="https://source.unsplash.com/D2Um-vTOIvQ/362x200" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">1 villa</h5>
                        <p class="card-text">
                            Deze villa gelegen op een compleet unieke locatie in Sluis biedt maar liefst vijf slaapkamers,
                            twee badkamers, één douchekamer, twee terrassen,
                            een inpandige garage met 2 autoparkeerplaatsen en een grote praktijkruimte in het souterrain welke een tal van mogelijkheden heeft.
                        </p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>